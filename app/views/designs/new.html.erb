<h2>Create New Design</h2>
<% if @design.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@design.errors.count, "error") %> prohibited this design from being saved:</h2>
    <ul>
      <% @design.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @design do |f| %> <%#= combines form with and tag, but here we specify the model %>
<%= f.label :title %>      <%#= but if we want it like form_tag then we should use url: design_path  %>
<%= f.text_field :title %><br>
<%= f.label :description %>
<%= f.text_field :description %><br>
<%= f.label :design_url %>
<%= f.text_field :design_url %><br>
<h2>Select From Existing Collage</h2>
<%= f.collection_select(:collage_id, Collage.all, :id, :name) %>
<%#= f is object @design, :params we wanna send, :all collage, :grb frm, :showing  %>
<h1>Creat New Collage</h1>
<%= f.fields_for :collage do |c| %>
<%= c.label :name %>
<%= c.text_field :name %><br>
<%= c.label :description %>
<%= c.text_field :description %><br>
<% end %>
<%= f.submit %>
<% end %>
