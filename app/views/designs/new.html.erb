<h2>Create New Design</h2>

<%= render partial: 'errors/errors', locals: {model: @design} %>

<%= form_with model: [@collage, @design] do |f| %> <%#= combines form with and tag, but here we specify the model %>
<%= f.label :title %>      <%#= but if we want it like form_tag then we should use url: design_path  %>
<%= f.text_field :title %><br>
<%= f.label :description %>
<%= f.text_field :description %><br>
<%= f.label :design_url %>
<%= f.text_field :design_url %><br>

<%= fields_for_helper(f) %>


<%= f.submit 'Create Design'%>
<% end %>
