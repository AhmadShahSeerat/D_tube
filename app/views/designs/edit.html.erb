<h3>Editting a Design </h3>

<%= form_with model: @design do |f| %>
<%= f.label :title %>
<%= f.text_field :title %> <br>
<%= f.label :description %>
<%= f.text_field :description %><br> 
<%= f.label :design_url %>
<%= f.text_field :design_url %><br>
<%= f.submit %>
<% end %>

<%= link_to "Delete this Design", design_path(@design), method: "delete" %>